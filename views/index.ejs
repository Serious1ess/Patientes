<div class="author">
  <h1 class="author__heading">قائمة المرضى</h1>
  <p class="author__body"></p>
</div>

<section class="articles">
  <h2 class="articles__heading">القائمة</h2>

  <ul class="article-ul">
    <% data.forEach(patient => { %>
    <li>
      <a href="/patient/<%= patient._id %>">
        <span><%= patient.firstName %> <%= patient.lastName %></span>
        <span class="article-list__date"
          ><%= new Date(patient.createdAt).toLocaleDateString('ar-EG') %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination"
    >&lt; View Older Patients</a
  >
  <% } %>
</section>
