<a href="/dashboard">&larr; رجوع</a>
<div class="admin-title">
  <h2>تحديث معلومات المريض</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="حذف" class="btn-delete btn" />
  </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
  <label for="title"><b>الاسم</b></label>
  <input
    type="text"
    placeholder="اسم المريض"
    name="title"
    value="<%= data.title %>"
  />

  <label for="body"><b>الشرح</b></label>
  <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

  <input type="submit" value="تحديث" class="btn" />
</form>
